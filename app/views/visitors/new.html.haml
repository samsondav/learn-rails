- content_for :title do
  Sam Philip
- content_for :description do
  Website of Sam Philip
%section
  = image_tag 'http://lorempixel.com/1170/600/cats/1'
%section
  .column
    %h2 Stay in touch.
  .column
    .form-centered
      = simple_form_for @visitor do |f|
        = f.error_notification
        = f.input :email, label: false, :placeholder => 'Enter email address...'
        %br
        = f.button :submit, "Sign up for the newsletter", :class => "submit"
